# Template file for 'webkitgtk-bin'
pkgname=webkitgtk-bin
version=2.4.11
revision=7
short_desc="GTK+3 port of the WebKit browser engine"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
homepage="http://webkitgtk.org/"
license="LGPL-2.1, 2-clause-BSD"
distfiles="https://dl.dropboxusercontent.com/s/aiw75lcurs35e7r/webkitgtk-bin.tar.gz"
checksum=1aaeee74467d90dfaef57d23a434efd9b9b3f703dc8a689ada888b9e7c0717e0
makedepends="tar"
depends="
 libatomic-devel at-spi2-core-devel libjpeg-turbo-devel libpng-devel sqlite-devel
 harfbuzz-devel gst-plugins-base1-devel libsoup-devel libxslt-devel
 icu-devel enchant-devel dbus-glib-devel libwebp-devel gtk+-devel gtk+3-devel
 libgudev-devel libsecret-devel MesaLib-devel geoclue2-devel
 $(vopt_if x11 libXt-devel)"
nopie=yes

do_extract() {
  tar xvf ${XBPS_SRCDISTDIR}/${pkgname}-${version}/webkitgtk-bin.tar.gz
}

do_install() {
  cp -Rfp ${XBPS_BUILDDIR}/${pkgname}-${version}/usr ${PKGDESTDIR}
}
